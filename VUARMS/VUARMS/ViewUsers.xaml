<Window x:Class="VUARMS.ViewUsers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Users" Height="541.3" Width="840" Loaded="Window_Loaded"
        xml:lang="en-GB">

    <Grid Width="819" Margin="6,10,6,0">
        <DataGrid CanUserDeleteRows="False" AutoGenerateColumns="true" Height="428" Margin="0,39,18,0" Name="dataGridResults" VerticalAlignment="Top">
            <DataGrid.ContextMenu>
                <ContextMenu Name="contextMenu">
                    <MenuItem Name="menuChangePass" Header="Change Password" Click="menuChange_Click"></MenuItem>
                </ContextMenu>
            </DataGrid.ContextMenu>
        </DataGrid>
        
        <Label Content="Count = 0" Height="28" HorizontalAlignment="Left" Margin="6,472,0,0" Name="lblCount" VerticalAlignment="Top" Width="273" />
        <Label Content="Search" HorizontalAlignment="Left" Margin="6,6,0,0" VerticalAlignment="Top" BorderThickness="1" Height="26"/>
        <TextBox x:Name="txtSearch" HorizontalAlignment="Left" Height="28" Margin="100,6,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="219" BorderBrush="Black" TextChanged="txtItemName_TextChanged"/>
        <CheckBox Content="Students" Name="viewChkBox" HorizontalAlignment="Left" Margin="367,10,0,0" VerticalAlignment="Top" Height="22" Width="90" Checked="CheckBox_Checked" Unchecked="viewChkBox_Unchecked"/>
    </Grid>
</Window>
