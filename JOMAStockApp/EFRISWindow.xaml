<Window x:Class="StockApp.EFRISWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EFRIS" Height="324.911" Width="520" Loaded="Window_Loaded" Closing="Window_Closing"  KeyDown="Window_KeyDown">
	<Viewbox Margin="5,5,5,5">
		<Grid Margin="5,5,5,5" Height="301">
			<Label x:Name="txtStatus" BorderThickness="1" BorderBrush="Black" Content="F1=Status Info" HorizontalAlignment="Left"  FontSize="10" Margin="10,10,0,0" VerticalAlignment="Top" Width="519"/>
			<Button Height="115" HorizontalAlignment="Left" Margin="9,54,0,0" Name="btnSyncInventory" VerticalAlignment="Top" Width="139" Click="btnSyncInventory_Click">
				<StackPanel Height="107" Width="117">
					<Image Source="/StockApp;component/Resources/sync.png" Height="86" Width="108"></Image>
					<TextBlock FontFamily="Segoe UI" FontSize="9.5" Height="18" Width="99">Sync Commodity Codes</TextBlock>
				</StackPanel>
			</Button>
			<Label x:Name="txtProgress" VerticalContentAlignment="Center" BorderThickness="1" BorderBrush="Black" Content="" HorizontalAlignment="Left"  FontSize="8"  VerticalAlignment="Top" Width="248" Margin="123,236,0,0" Height="21"/>
			<ProgressBar x:Name="progressBar" HorizontalAlignment="Center" Height="15" Margin="0,262,0,0" VerticalAlignment="Top" Width="509" Maximum="100" Minimum="0"/>
		</Grid>
	</Viewbox>
</Window>
