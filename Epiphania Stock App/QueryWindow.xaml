<Window x:Class="StockApp.QueryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="" Height="439" Width="840">
    <Grid Width="819" Height="400">
        <DataGrid AutoGenerateColumns="true" AutoGeneratingColumn="dataGridResults_AutoGeneratingColumn" Height="291" HorizontalAlignment="Left" Margin="6,69,0,0" Name="dataGridResults" VerticalAlignment="Top" Width="801" CanUserDeleteRows="True">
        </DataGrid>
        <Label Content="Count = 0" Height="28" HorizontalAlignment="Left" Margin="6,343,0,0" Name="lblCount" VerticalAlignment="Top" Width="273" />
        <Button  Height="25" HorizontalAlignment="Left" Margin="732,365,0,0" Name="btnUpdate" VerticalAlignment="Top" Width="75">
            <StackPanel>
                <TextBlock>Update</TextBlock>
            </StackPanel>
        </Button>
        <Label Content="QUERY" HorizontalAlignment="Left" Margin="7,10,0,0" VerticalAlignment="Top" BorderThickness="1" Height="26"/>
        <TextBox x:Name="txtSearch" HorizontalAlignment="Left" Height="54" Margin="77,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="638" BorderBrush="Black" FontFamily="Courier New"/>
        <Button x:Name="btnGo" Content="Go" HorizontalAlignment="Left" Margin="756,39,0,0" VerticalAlignment="Top" Width="51" Height="25" Click="btnGo_Click"/>
    </Grid>
</Window>
