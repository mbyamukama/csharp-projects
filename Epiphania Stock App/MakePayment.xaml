<Window x:Class="StockApp.MakePayment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Make Payment" Height="252" Width="512" Loaded="Window_Loaded">
    <Viewbox Margin="5,5,5,5">
    <Grid Margin="0,0,0,0" VerticalAlignment="Top">
        <TextBox Name="txtAmount" HorizontalAlignment="Left" Height="31" Margin="104,69,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="122" FontSize="18" TextChanged="txtAmount_TextChanged"/>
        <Label Content="Amount" HorizontalAlignment="Left" Margin="0,66,0,0" VerticalAlignment="Top" FontSize="18"/>
        <Button Content="Pay" Name="btnSubmit" HorizontalAlignment="Left" Margin="421,172,0,0" VerticalAlignment="Top" Width="75" Click="btnSubmit_Click" FontSize="18"/>
        <Label Name="lblPayee" Content="Label" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top" Width="496" FontSize="18"/>
        <TextBox x:Name="txtREF" HorizontalAlignment="Left" Height="39" Margin="104,118,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="392" FontSize="18"/>
        <Label Content="REF" HorizontalAlignment="Left" Margin="0,118,0,0" VerticalAlignment="Top" FontSize="18"/>

    </Grid>
    </Viewbox>
</Window>
