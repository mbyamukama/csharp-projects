        <Label Content="Username" Height="28" HorizontalAlignment="Left" Margin="12,28,0,0" Name="label1" VerticalAlignment="Top" />
        <TextBox Height="35" Text="" HorizontalAlignment="Left" Margin="90,26,0,0" Name="txtUserName" VerticalAlignment="Top" Width="220" FontSize="20" />
        <PasswordBox Height="38" Password="" HorizontalAlignment="Left" Margin="90,84,0,0" Name="txtPassword" VerticalAlignment="Top" Width="220"  FontSize="20" KeyDown="txtPassword_KeyDown"/>
        <Label Content="Password" Height="28" HorizontalAlignment="Left" Margin="12,84,0,0" Name="label2" VerticalAlignment="Top" Width="73" />
        <Button Content="Login" FontSize="14" Name="btnLogin" HorizontalAlignment="Left" Margin="235,140,0,0" VerticalAlignment="Top" Width="75" Height="31" Click="btnLogin_Click" RenderTransformOrigin="0.387,-1.097"/>
    </Grid>
    </Viewbox>
</Window>
