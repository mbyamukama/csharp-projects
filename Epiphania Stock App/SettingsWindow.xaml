<Window x:Class="StockApp.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="197" Width="567">
    <Grid>
        <Button Height="67" HorizontalAlignment="Left" Margin="447,90,0,0" Name="btnSave" VerticalAlignment="Top" Width="89" Click="btnSave_Click">
            <StackPanel>
                <Image Source="/StockApp;component/Resources/save.png" Width="52" Height="44" />
                <TextBlock Height="18" Width="34">Save</TextBlock>
            </StackPanel>
        </Button>
        <CheckBox Name="chkDisablePrinting" Content="Disable Printing" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="16"/>
    </Grid>
</Window>
