<Window x:Class="StockApp.Search"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="" Height="439" Width="840">
    <Grid Width="819" Height="400">
        <DataGrid AutoGenerateColumns="true" Height="316" HorizontalAlignment="Left" Margin="6,41,0,0" Name="dataGridResults" VerticalAlignment="Top" Width="801" ItemsSource="{Binding Path=DataTable, Mode=OneWay}"/>
        <Label Content="Count = 0" Height="28" HorizontalAlignment="Left" Margin="6,362,0,0" Name="lblCount" VerticalAlignment="Top" Width="273" />
        <Label Content="Search" HorizontalAlignment="Left" Margin="7,10,0,0" VerticalAlignment="Top" BorderThickness="1" Height="26"/>
        <TextBox x:Name="txtSearch" HorizontalAlignment="Left" Height="26" Margin="77,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="235" BorderBrush="Black"/>
        <Button x:Name="btnGo" Content="Go" HorizontalAlignment="Left" Margin="755,9,0,0" VerticalAlignment="Top" Width="51" Height="25" Click="btnGo_Click"/>
        <Button x:Name="btnNext" Content="Next >>" HorizontalAlignment="Left" Margin="746,365,0,0" VerticalAlignment="Top" Width="60" Height="25" Click="btnNext_Click"/>
    </Grid>
</Window>
