<Window x:Class="FRESUgandaERP.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="263" Width="402" Loaded="Window_Loaded">
    <Grid Height="202" Width="372">
        <Grid Margin="10,19,12,12">
            <Label Content="Username" Height="28" HorizontalAlignment="Left" Margin="12,28,0,0" Name="label1" VerticalAlignment="Top" />
            <TextBox FontSize="20" Height="35" HorizontalAlignment="Left" Margin="82,26,0,0" Name="txtUserName" Text="" VerticalAlignment="Top" Width="252" BorderBrush="Black" />
            <PasswordBox FontSize="20" Height="38" HorizontalAlignment="Left" KeyDown="txtPassword_KeyDown" Margin="82,84,0,0" Name="txtPassword" VerticalAlignment="Top" Width="252" BorderBrush="Black" />
            <Label Content="Password" Height="28" HorizontalAlignment="Left" Margin="12,84,0,0" Name="label2" VerticalAlignment="Top" Width="73" />
            <Button Content="Login" Height="36" HorizontalAlignment="Right" Margin="0,129,16,0" Name="btnSubmit" VerticalAlignment="Top" Width="84" Click="btnSubmit_Click" />
        </Grid>
    </Grid>
</Window>
