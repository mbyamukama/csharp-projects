        <TextBox Height="23" HorizontalAlignment="Left" Margin="140,51,0,0" Name="txtDirectory" VerticalAlignment="Top" Width="314" />
        <Label Content="SYSDBA Password" Height="28" HorizontalAlignment="Left" Margin="12,85,0,0" Name="label3" VerticalAlignment="Top" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="140,85,0,0" Name="txtSysDbaPass" VerticalAlignment="Top" Width="314" />
    </Grid>
</Window>
