<Window x:Class="JMHotel.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="340" Width="546" Loaded="Window_Loaded" >
    <Viewbox>
    <Grid Margin="5,5,5,5">
        <Label Content="Username" Height="28" HorizontalAlignment="Left" Margin="12,28,0,0" Name="label1" VerticalAlignment="Top" FontSize="16" />
        <TextBox BorderBrush="Black" Height="35" Text="" HorizontalAlignment="Left" Margin="106,26,0,0" Name="txtUserName" VerticalAlignment="Top" Width="228" FontSize="20" />
        <PasswordBox BorderBrush="Black" Height="38" Password="" HorizontalAlignment="Left" Margin="106,84,0,0" Name="txtPassword" VerticalAlignment="Top" Width="228" KeyDown="txtPassword_KeyDown" FontSize="20" />
        <Label Content="Password" Height="28" HorizontalAlignment="Left" Margin="12,84,0,0" Name="label2" VerticalAlignment="Top" Width="81" FontSize="16" />
        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Left" Margin="247,149,0,0" VerticalAlignment="Top" Width="87" FontSize="16" Height="32" Click="btnLogin_Click"/>
    </Grid>
    </Viewbox>
</Window>
